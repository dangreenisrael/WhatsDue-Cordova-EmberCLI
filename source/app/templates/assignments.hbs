<div id="newAssignments">
    <nav>
        <div class="due">
            What's Due
            <span class="badge square black">
                {{totalDue}}
            </span>
        </div>
        <div class="vertical-separator white"></div>
        <div class="overdue">
            Overdue
            <span class="badge square black">
                {{totalOverdue}}
            </span>
        </div>
    </nav>

    <div id="assignments-due" class="needsclick">
        {{firstOfDay}}
        <div class="arrow-up"></div>
        {{#each groupedCards as |day|}}
            <div class="day-divider">{{day.key}}</div>
                {{#each day as |assignment|}}
                    <div {{action "clickElement" assignment on="panStart" }}>
                        {{assignment-card assignment=assignment toggleModal='toggleModal' removeAssignment='removeAssignment'}}
                    </div>
                {{/each}}
        {{/each}}
        <br/>
        <br>
        <br>

    </div>

    <div id="assignments-overdue">
        <div class="arrow-up"></div>
        <div class="day-divider">
            Overdue
        </div>
        {{#each overdue as |assignment|}}
            {{assignment-card assignment=assignment toggleModal='toggleModal' removeAssignment='removeAssignment'}}
        {{/each}}
    </div>
    <div class="static-content nothing-due {{stuffDue}}">
        <img src="assets/img/thumbs-up.png">
        <h2 class="centered">
            Looks like you've got nothing due
        </h2>
    </div>
</div>
{{#if isShowingModal}}
    {{#modal-dialog close="toggleModal"
    alignment="center"
    translucentOverlay=true}}
            <div class="buttons">
                <div {{action 'share'}} class="button share">
                    Share
                </div>

                <div {{action 'cancel'}} class="button close">
                    Cancel
                </div>
            </div>
    {{/modal-dialog}}
{{/if}}
